<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Agrega una ImageView para la foto de perfil (circular) -->
    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/user"
        android:scaleType="centerCrop" />

    <!-- Agrega un TextView para mostrar el nombre -->
    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del alumno"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="16dp" />

    <!-- Agrega un TextView para mostrar la fecha de envío -->
    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de envío"
        android:textSize="12sp"
        android:layout_marginTop="4dp" />

    <!-- Agrega un TextView para mostrar el reporte -->
    <TextView
        android:id="@+id/reportTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reporte del alumno"
        android:textSize="16sp"
        android:layout_marginTop="16dp" />

    <!-- Agrega el RecyclerView para mostrar la lista de reportes -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
